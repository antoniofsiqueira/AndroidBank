<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:text="@string/txv_pagamento"
            android:textColor="#FFA8B4C4"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txvDate"
            android:layout_width="117dp"
            android:layout_height="14dp"
            android:text="12/12/2018"
            android:textColor="#FFA8B4C4"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvDesc"
            android:layout_width="120dp"
            android:layout_height="18dp"
            android:text="@string/txv_luz"
            android:textColor="#FF485465"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txvValue"
            android:layout_width="184dp"
            android:layout_height="23dp"
            android:text="R$1.000,00"
            android:textColor="#FF485465"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>